<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:alpha="0.8"
            android:background="#FFF"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="16dp">

            <TextView
                android:id="@+id/email"
                android:layout_width="201dp"
                android:layout_height="0dp"
                android:text="Email"
                android:textColor="@color/colorAccent"
                android:textSize="22dp"
                android:layout_marginLeft="48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="48dp" />

            <EditText
                android:id="@+id/field_password"
                android:layout_width="201dp"
                android:layout_height="0dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                app:layout_constraintLeft_toRightOf="@+id/email"
                android:layout_marginLeft="44dp"
                app:layout_constraintTop_toTopOf="@+id/email"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/email"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.012"
                android:layout_marginStart="44dp"
                android:layout_marginEnd="8dp" />


            <TextView
                android:id="@+id/password"
                android:layout_width="201dp"
                android:layout_height="0dp"
                android:text="Password"
                android:textColor="@color/colorAccent"
                android:textSize="22dp"
                app:layout_constraintLeft_toLeftOf="@+id/email"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <EditText
                android:id="@+id/field_email"
                android:layout_width="201dp"
                android:layout_height="0dp"
                android:ems="10"
                android:inputType="textPassword"
                app:layout_constraintLeft_toRightOf="@+id/password"
                android:layout_marginLeft="44dp"
                app:layout_constraintTop_toTopOf="@+id/password"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/password"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="@+id/field_password"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="44dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/create_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="create account"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintVertical_bias="0.974"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.0" />

        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.97"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="315dp"
            tools:layout_editor_absoluteY="30dp">

            <Button
                android:id="@+id/sign_in_with_email_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In" />

            <Button
                android:id="@+id/sign_in_with_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In with Google" />

            <Button
                android:id="@+id/anonymously"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue anonymously" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>