<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wasp.amanda.projet_mobile.userActions.GetRendezVousActivity">

    <LinearLayout
        android:id="@+id/CalendarContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"></LinearLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Selectionnee"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/dateChoosen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="22/07/2017"
        android:textSize="16sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Heure (HH:MM)"
        android:textSize="16sp"
        android:textColor="@color/colorAccent"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:padding="10dp"/>

    <LinearLayout
        android:id="@+id/ConfirmerRDVContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirmer" />
    </LinearLayout>

</LinearLayout>
